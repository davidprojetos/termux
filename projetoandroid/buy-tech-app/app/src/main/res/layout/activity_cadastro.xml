<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText android:id="@+id/etNome" android:hint="Nome" android:inputType="textPersonName" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etEmail" android:hint="Email" android:inputType="textEmailAddress" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etCpf" android:hint="CPF" android:inputType="number" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etDataNascimento" android:hint="Data de Nascimento" android:inputType="date" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etTelefone" android:hint="Telefone" android:inputType="phone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etCep" android:hint="CEP" android:inputType="number" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etComplemento" android:hint="Complemento" android:inputType="text" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etSenha" android:hint="Senha" android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etConfirmarSenha" android:hint="Confirmar Senha" android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <Button android:id="@+id/btnCadastrar" android:text="Cadastrar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp"/>
<Button
        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>