<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:layout_margin="4dp"
     android:layout_weight="1"
     android:id="@+id/cardView6">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="16dp"
         android:orientation="vertical">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="18sp"
             android:id="@+id/textViewTituloN"
             android:text="Projeto 6 - Notificações"
             android:textStyle="bold" />

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:padding="16dp"
             android:orientation="vertical">

            <EditText
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:hint="Intervalo (segundos)"
                 android:inputType="number"
                 android:id="@+id/editTextInterval" />

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_below="@id/editTextInterval"
                 android:layout_marginTop="10dp"
                 android:id="@+id/buttonStartNotifications"
                 android:text="Iniciar Notificações" />

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_below="@id/buttonStartNotifications"
                 android:layout_marginTop="10dp"
                 android:id="@+id/buttonStopNotifications"
                 android:text="Parar Notificações" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>