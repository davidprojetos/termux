<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:layout_margin="4dp"
     android:layout_weight="1"
     android:id="@+id/cardViewN">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewTituloN"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Projeto 8 - Descrição do Projeto"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonStartNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Notifications" />

        <Button
            android:id="@+id/buttonStopNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Notifications"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>